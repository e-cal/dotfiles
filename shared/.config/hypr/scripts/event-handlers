#!/usr/bin/env bash

handle() {
	case $1 in
	openwindow*)
		# focus albert when it opens
		if [[ $1 == *"albert"* ]]; then
			hyprctl dispatch focuswindow "albert"
			sleep 0.3
			hyprctl dispatch focuswindow "albert"
		fi
		;;
	esac
}

socat - UNIX-CONNECT:$XDG_RUNTIME_DIR/hypr/"$HYPRLAND_INSTANCE_SIGNATURE"/.socket2.sock | while read -r line; do handle "$line"; done
