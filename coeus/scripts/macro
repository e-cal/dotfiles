#!/bin/bash

function left() {
    for ((i = 0 ; i < $1 ; i++))
    do
        # sleep 0.005
        xdotool key  Left
    done
}

function right() {
    for ((i = 0 ; i < $1 ; i++))
    do
        # sleep 0.005
        xdotool key  Right
    done
}

function up() {
    for ((i = 0 ; i < $1 ; i++))
    do
        # sleep 0.005
        xdotool key  Up
    done
}

function down() {
    for ((i = 0 ; i < $1 ; i++))
    do
        # sleep 0.005
        xdotool key  Down
    done
}

function newline {
    xdotool key Shift+Return
}

function focus() {
    xdotool search --classname "$1" windowfocus --sync
}

function text() {
    xsel -ib <<< "$1"
    xdotool key Control+V
}

function type_string() {
    xdotool type "$1"
}

case $1 in
    notion)
        focus notion.so

        function new_eqn {
            type_string "/"
            text "adv eqn"
            xdotool key Return
        }

        case $2 in
            tex)
                new_eqn
                sleep 1
                xdotool key space
                ;;
            inline)
                xdotool key  Control+Shift+E
                sleep 0.2
                xdotool key space
                ;;
            matrix)
                text "\begin{bmatrix}\end{bmatrix}"
                left 14
                wait
                newline
                newline
                xdotool key Up
                ;;
            aligned)
                sleep 0.4
                new_eqn
                sleep 0.4
                text "\begin{aligned} &= \\\\&=\end{aligned}"
                left 21
                newline
                right 6
                newline
                right 2
                newline
                up 2
                ;;
            align)
                up 10
                text "\begin{aligned}"
                down 10
                text "\end{aligned}"
                xdotool key BackSpace
                left 13
                newline
                newline
                up 1
                ;;
            mathbb)
                text "\mathbb "
                xdotool key BackSpace
                ;;
            def)
                text "\overset{\text{\tiny def}}{=} "
                xdotool key BackSpace
                ;;
            sum)
                text "\sum\limits^{}_{}"
                left 5
                xdotool key Shift
                ;;
            null)
                text "\text{null}()"
                left 1
                ;;
            matrix-set)
                text "\left\{\right\}"
                left 9
                newline
                macro notion matrix
                down 2
                newline
                up 1
                macro notion matrix
                up 3
                ;;
            inverse)
                text "^{-1}"
                xdotool key BackSpace
                ;;
            to)
                text "\$\$\to\$\$"
                ;;
            vector)
                sleep 0.2
                text "\vec "
                xdotool key BackSpace
                ;;
            lin-combo)
                text "\alpha_1 \vec q_1 + \alpha_2 \vec q_2 + \dots + \alpha_m \vec q_m"
                ;;
            reals)
                text "\in \R^{}"
                xdotool key BackSpace
                left 1
                ;;
            brackets)
                text "\left[  \right]"
                xdotool key BackSpace
                left 8
                ;;
            braces)
                text "\left\{  \right\}"
                xdotool key BackSpace
                left 9
                ;;
            parenthesis)
                text "\left(  \right)"
                xdotool key BackSpace
                left 8
                ;;
            expr)
                text "\lang\text{expr}\rang"
                xdotool key BackSpace
                ;;

            symbol)
                # if they don't appear, add a space or 2 after
                case $3 in
                    alpha)
                        text "\alpha"
                        ;;
                    beta)
                        text "\beta"
                        ;;
                    epsilon)
                        text "\epsilon"
                        ;;
                    lambda)
                        text "\lambda"
                        ;;
                    cap-lambda)
                        text "\Lambda"
                        ;;
                    theta)
                        text "\theta"
                        ;;
                    sigma)
                        text "\sigma"
                        ;;
                    cap-sigma)
                        text "\Sigma "
                        ;;
                    not-equal)
                        text "\not="
                        ;;
                    data-matrix)
                        text "\$\$A \in \R^{m\times n}\$\$"
                        xdotool key space
                        xdotool key space
                        ;;
                    dots)
                        text "\dots "
                        ;;
                esac
                xdotool key BackSpace
                ;;
        esac
        ;;
esac
