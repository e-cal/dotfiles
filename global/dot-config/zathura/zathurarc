# Open document in fit-width mode by default
set adjust-open "width"

# Copy to clipboard
set selection-clipboard clipboard

# Vim big scrolling
map <C-e> scroll half-down
map <C-y> scroll half-up

set scroll-step 50
set scroll-hstep 10

# Dark mode
set font "JetBrainsMonoNerdFont 15"
set recolor
set recolor-lightcolor \#222222
set recolor-keephue
set default-bg \#222230

set statusbar-fg "#B0B0B0" 
set statusbar-bg "#202020"
set notification-bg "#B0B0B0"
set notification-fg "#202020"
