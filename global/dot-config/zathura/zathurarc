# Open document in fit-width mode by default
set adjust-open "best-fit"

# Copy to clipboard
set selection-clipboard clipboard

# Vim big scrolling
map <C-e> scroll half-down
map <C-y> scroll half-up

set scroll-step 50
set scroll-hstep 10

# Dark mode
set font "JetBrainsMonoNerdFont 15"
set recolor
set recolor-lightcolor \#222222
set recolor-keephue
set default-bg \#222230

set statusbar-fg "#B0B0B0" #04
set statusbar-bg "#202020" #01
set notification-bg "#B0B0B0" #0B
set notification-fg "#202020" #00
