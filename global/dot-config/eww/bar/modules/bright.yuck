(defwidget bright []
  (box
    :class "module"
    :visible {hostname == "prometheus"}
    (eventbox
      :onscroll "echo {} | sed -e 's/up/-A 1/g' -e 's/down/-U 1/g' | xargs pkexec brillo"
      (button
        :class "bright-icon icon"
        :onclick "${EWW_CMD} open --toggle system-menu"
        :tooltip "brightness ${round(brightness.percent, 0)}%"
        {brightness.icon}))))
