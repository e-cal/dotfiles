(defwidget bluetooth []
  (button
    :class "module icon"
    :onclick "~/.config/eww/scripts/toggle system-menu"
    :onrightclick "blueberry" ; clicking opens blueberry
    ;:onrightclick "scripts/bluetooth toggle" ; rightclick to turn bluetooth on/off
    :tooltip "${bluetooth.text} ${bluetooth.battery}"
    :style "color: ${bluetooth.color}"
    {bluetooth.icon}))
