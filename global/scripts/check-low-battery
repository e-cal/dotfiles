#!/usr/bin/env bash

bat=$(acpi | awk '{printf $4}' | tr -d "," | tr -d "%")
charging=$(acpi | awk '{printf $3}' | tr -d ",")

if [[ $charging == "Charging" ]]; then
	(($bat >= 95)) && notify-send "battery charged" "$bat%"
	exit
fi

if (($bat <= 5)); then
	notify-send "critical battery" "$bat%" -u "critical"
elif (($bat <= 10)); then
	notify-send "very low battery" "$bat%" -u "critical"
elif (($bat <= 15)); then
	notify-send "low battery" "$bat%" -u "critical"
# else
# 	notify-send "battery" "$bat%" -u "critical" -i ~/.config/dunst/images/warning.png
fi
