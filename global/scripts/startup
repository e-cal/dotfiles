#!/usr/bin/env bash

launch-bar &
dropbox &
redshift &
eyes &
yay -Syyy &
config-wacom m &

tmux new -s main -d -n main "triangles && echo" &
tmux new -s scratch -d -n main "triangles && echo" &

cloud backup &
cloud download all > ~/.local/share/rclone/startup-sync.log &
# cloud autosync &

# Might want prom to do the same
if [[ `hostname`="coeus" ]]; then
    for i in {0..10}; do
        sleep 5
        polybar-msg -p "$(pgrep -f "polybar top")" hook volume 1 &>/dev/null
    done
fi
