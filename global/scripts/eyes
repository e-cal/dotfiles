#!/bin/bash

sleep 20m
ACTION=$(dunstify --action="default,run again" --action="stop,stop" "Break time" "Take care of your eyes! ðŸ‘€" -i ~/.config/dunst/images/eyes.png -u critical)

case $ACTION in
    default)
        eyes &
        ;;
    stop)
        exit
        ;;
    1 | 2) # expired (1) | dismissed (2)
        exit
        ;;
esac
