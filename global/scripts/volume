#!/bin/bash

function get_volume {
	amixer -D pulse get Master | grep '%' | head -n 1 | cut -d '[' -f 2 | cut -d '%' -f 1
}

function is_mute {
	amixer -D pulse get Master | grep '%' | grep -oE '[^ ]+$' | grep off >/dev/null
}

function send_notification {
	if [[ $HOSTNAME == "coeus" ]]; then
		polybar-msg -p "$(pgrep -f "polybar top")" hook volume 1 &>/dev/null
	elif [[ $HOSTNAME == "prometheus" ]]; then
		polybar-msg -p "$(pgrep -f "polybar sys")" hook volume 1 &>/dev/null
	fi

	if is_mute; then
		dunstify "Muted" --icon ~/.config/dunst/images/mute.png -r 1234
	else
		volume=$(get_volume)
		bar=$(seq --separator="â”€" 0 "$((volume / 3))" | sed 's/[0-9]//g')
		# Send the notification
		dunstify "Volume" -h int:value:"$volume" --icon ~/.config/dunst/images/volume.png -r 1234
	fi
}

[[ $# = 0 ]] && get_volume && exit 0

case $1 in
up)
	pactl set-sink-mute @DEFAULT_SINK@ 0
	volume=$(get_volume)
	if [ $volume -lt 100 ]; then
		pactl set-sink-volume @DEFAULT_SINK@ +5%
	fi
	send_notification
	;;
down)
	pactl set-sink-mute @DEFAULT_SINK@ 0
	volume=$(get_volume)
	if [ $volume -gt 0 ]; then
		pactl set-sink-volume @DEFAULT_SINK@ -5%
	fi
	send_notification
	;;
mute)
	pactl set-sink-mute @DEFAULT_SINK@ toggle
	send_notification
	;;
set)
	pactl set-sink-volume @DEFAULT_SINK@ $2%
	send_notification
	;;
esac
