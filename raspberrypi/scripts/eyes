#!/bin/bash

INTERVAL=20

sleep "$INTERVAL"m
count=$(($1 + $INTERVAL))

ACTION=$(dunstify --action="default,run again" --action="stop,stop" "Take care of your eyes! ðŸ‘€" "$count min without a break" -i ~/.config/dunst/images/eyes.png -t 300000 -u normal)

case $ACTION in
default) # left click
	eyes &
	;;
stop) # middle click -> stop
	exit
	;;
1 | 2) # 1=expired, 2=dismissed (right click)
	eyes $count &
	;;
esac
